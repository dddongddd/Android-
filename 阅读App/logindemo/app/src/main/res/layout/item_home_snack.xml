<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10sp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2sp"
    android:orientation="vertical">

        <!--均衡的缩放图像（保持图像原始比例），使图片的两个坐标（宽、高）都大于等于 相应的视图坐标（负的内边距）。图像则位于视图的中央。-->
        <ImageView
            android:id="@+id/homeRightImage"
            android:layout_width="105dp"
            android:layout_height="125dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/tab_better_normal" />

        <TextView
            android:id="@+id/homeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_yellow"
            app:layout_constraintStart_toEndOf="@+id/homeRightImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeRightName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/homeRightImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeRightPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textColor="#F56C6C"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/homeRightImage"
            app:layout_constraintBottom_toBottomOf="parent"  />


</androidx.constraintlayout.widget.ConstraintLayout>